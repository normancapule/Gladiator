<!DOCTYPE html>
<html>
  <head>
    <title>RorGladiator</title>
      <%= stylesheet_link_tag :all %>
      <%= javascript_include_tag :defaults %>
      <%= csrf_meta_tag %>
    <style type="text/css">
      #fighters 
      {
      float:right;
      border-style:solid;
      border-width:5px;
      border-color:brown;
      }
      #arena
      {
      float:left;
      border-style:solid;
      border-width:5px;
      border-color:DarkGreen;
      }
      #history
      {
      float:center;
      border-style:solid;
      border-width:5px;
      border-color:black;
      }
      #list_of_fighters, #history_list
      {
      border-style:groove;
      border-width:5px;
      width:200px;
      border-color:brown;
      }
      div#list_of_fighters,#history_list{
      overflow: auto;
      height: 400px;
      }
    </style>
  </head>
  <body>
    <div align="right">
      <h3>Logged in as <%=@logged_name%></h3> 
      <%= button_to "Logout", log_out_path, :method => "get"%> </div>
    <div id="arena" align = "center">
      <%= render 'arena' %>
    </div>

    <div id="fighters" align = "center">
      <%= render 'fighters' %>
    </div>

    <div id="history" align = "center">
      <%= render 'history' %>
    </div>
  </body>
</html>
